<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:overrideLibrary="com.google.firebase.auth"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarForLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b3e5fc">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your details here:"
            android:paddingBottom="15dp"
            android:layout_marginBottom="25dp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            >

        </TextView>

        <EditText
            android:id="@+id/outletName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Outlet Name"
            android:inputType="text"
            android:paddingBottom="15dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="@android:color/black"
            />

        <EditText
            android:id="@+id/outletAddress"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Outlet Address"
            android:inputType="textLongMessage"
            android:paddingBottom="15dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="@android:color/black"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:layout_marginBottom="25dp"
            >

            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Select City: "
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                >

            </TextView>
            <Spinner
                android:id="@+id/spinnerCitySelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewCity"
                android:entries="@array/city_names"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                >

            </Spinner>
        </RelativeLayout>

        <EditText
            android:id="@+id/outletLocality"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Outlet Locality"
            android:inputType=""
            android:paddingBottom="15dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="@android:color/black"
            />
        <EditText
            android:id="@+id/outletContactName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Contact Person's Name"
            android:inputType=""
            android:paddingBottom="15dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="@android:color/black"
            />
        <EditText
            android:id="@+id/outletContact"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Mobile Number"
            android:inputType="number"
            android:paddingBottom="15dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="@android:color/black"
            />
        <EditText
            android:id="@+id/outletPincode"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Enter Pincode"
            android:inputType="number"
            android:paddingBottom="15dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="@android:color/black"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Confirm"
        android:background="@drawable/rounded_button_transparent"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center_horizontal"
        />

</LinearLayout>
